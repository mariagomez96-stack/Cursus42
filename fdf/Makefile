DRAW_DIR			= ./draw
ERRORS_DIR			= ./errors
INIT_DIR			= ./init
UTILS_DIR			= ./utils
LIBRARIES			= ./libs
OBJ_DIR				= ./objects
LIBFT_DIR			= libft
PRINTFT_DIR			= printf
GNL_DIR				= gnl
INCLUDES_DIR		= ./includes
MLX42_LIB			= ./MLX42/lib
MLX42_INCLUDE		= ./MLX42/include/MLX42

# ***** LIBRARY .a ************************************************************* #

LIBFT_A				= ${LIBRARIES}/${LIBFT_DIR}/libft.a
PRINTFT_A			= ${LIBRARIES}/${PRINTFT_DIR}/libftprintf.a
LIBMLX42_A			= ${MLX42_LIB}/libmlx42.a

